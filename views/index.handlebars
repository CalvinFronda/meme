      <div class="col-8 offset-2">
        {{!-- <h1>{{msg}}</h1> --}}

        <h2 id="titleTop">MEME UwU</h2>




        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="example-text" id="heads">Add Meme Title</label>
            <input type="text" id="title" class="form-control" aria-describedby="example-text" placeholder="Enter Example Text">
          </div>

          <div class="form-group">
            <label for="photo" id="heads">Link to Photo Image (Required)</label>
            <input type="text" class="form-control" id="image">
          </div>
        </form>

        <div class="form-group">
          <label for="example-description" id="heads">Description</label>
          <textarea class="form-control" id="description" aria-describedby="example-description" placeholder="This meme was created for.. This meme means.."></textarea>
        </div>

        <div class="form-group">
          <label for="example" id="heads">Example:</label>
          <textarea class="form-control" id="example" aria-describedby="example-description" placeholder="Ex: This meme is used when..."></textarea>
        </div>

        <div class="form-group">
          <label for="example-text" id="heads">Author</label>
          <input type="text" id="author" class="form-control" aria-describedby="example-text" placeholder="Enter Example Text">
        </div>

        <button id="submit" class="btn btn-primary float-right">SUBMIT</button>

        </form>

        <br>
        {{!-- <h3>Examples:</h3> --}}
        <ul id="list" class="list-group">
          {{#each examples}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="example/{{this.id}}">{{this.title}}<br>
              <img src={{this.image}}>{{this.description}}<br>{{this.author}}<br>{{this.createdAt}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
            <p>
              <a href="#" data-id="{{this.id}}" title="Love it" class="btn btn-counter likes" id="like" data-count="{{this.likesNum}}"><span>&#x2764;</span>
                Love
                it</a>
              <a href="#" data-id="{{this.id}}" title="Love it" class="btn btn-counter" id="dislike" data-count="0"><span>&#128532;</span>Hate
                it</a>
            </p>

          </li>
          {{/each}}
        </ul>




